{
    "train_transforms": [
        {
            "package": "torchstream.transforms",
            "name": "CenterSegment",
            "argv": {
                "size": 8
            }      
        },
        {
            "name": "Resize",
            "argv": {
                "size": [256, 256]
            }      
        },
        {
            "name": "CenterCrop",
            "argv": {
                "size": [224, 224]
            }      
        },
        {
            "package": "torchstream.transforms",
            "name": "ToTensor"  
        },
        {
            "package": "torchstream.transforms",
            "name": "Normalize" ,
            "argv": {
                "mean": [0.485, 0.456, 0.406],
                "std": [0.229, 0.224, 0.225]
            }
        }
    ],

    "train_dataset": {
        "name": "HMDB51",
        "argv": {
            "train": true
        }
    },

    "val_transforms": [
        {
            "package": "torchstream.transforms",
            "name": "CenterSegment",
            "argv": {
                "size": 8
            }      
        },
        {
            "name": "Resize",
            "argv": {
                "size": [256, 256]
            }      
        },
        {
            "name": "CenterCrop",
            "argv": {
                "size": [224, 224]
            }      
        },
        {
            "package": "torchstream.transforms",
            "name": "ToTensor"  
        },
        {
            "package": "torchstream.transforms",
            "name": "Normalize" ,
            "argv": {
                "mean": [0.485, 0.456, 0.406],
                "std": [0.229, 0.224, 0.225]
            }
        }
    ],

    "val_dataset": {
        "name": "HMDB51",
        "argv": {
            "train": false
        }
    },

    "train_loader":{
        "batch_size": 32,
        "num_workers": 32,
        "shuffle": true,
        "pin_memory": true,
        "drop_last": true
    },

    "val_loader":{
        "batch_size": 64,
        "num_workers": 32,
        "shuffle": false,
        "pin_memory": true,
        "drop_last": false
    },

    "model": {
        "package": "torchstream.models",
        "name": "TSN",
        "argv": {
            "cls_num": 51,
            "input_size": [8, 224, 224],
            "base_model": "resnet50",
            "dropout": 0.8,
            "partial_bn": true,
            "use_softmax": false
        }
    },

    "criterion": {
        "name": "CrossEntropyLoss"
    },

    "optimizer": {
        "name": "SGD",
        "argv": {
            "lr": 0.001,
            "momentum": 0.9
        }
    },

    "train": {
        "epochs": 20,
        "backup": {
            "dir_path": "checkpoints",
            "pth_name": "template"
        }
    }

}
