        }
    },

    "criterion": {
        "name": "CrossEntropyLoss"
    },

    "optimizer": {
        "name": "SGD",
        "argv": {
            "params": "all",
            "lr": 0.01,
            "momentum": 0.9,
            "weight_decay": 0.0001
        }
    },

    "lr_scheduler": {
        "name": "StepLR",
